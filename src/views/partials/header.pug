header
  a.header__logo(href="/")
    i.fa-brands.fa-youtube
  nav
    ul
      li
        a(href="/search")
          i.fa-solid.fa-magnifying-glass
      if loggedIn
        li
          a(href="/videos/upload") Upload Video
        li
          a(href="/users/edit") Edit Profile
        li
          a(href="/users/logout") Log Out
        li
          a(href=`/users/${loggedInUser._id}`)
            if !loggedInUser.avatarUrl || loggedInUser.avatarUrl === ""
              img.header__avatar(
                src="../../img/avatar_default.png",
                crossorigin
              )
            else
              if isFlyio
                img.header__avatar(src=loggedInUser.avatarUrl, crossorigin)
              else
                img.header__avatar(src="/" + loggedInUser.avatarUrl, crossorigin)
      else
        li
          a(href="/login") Log In
        li
          a.header__Btn(href="/join") Join

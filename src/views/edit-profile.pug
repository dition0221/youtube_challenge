extends base

block content
  if errorMessage
    span= errorMessage
  form.edit-profile__form(method="POST", enctype="multipart/form-data")
    label(for="avatar") Avatar
    input#avatar(name="avatar", type="file", accept="image/*")
    input(
      name="name",
      type="text",
      placeholder="Name*",
      required,
      value=loggedInUser.name
    )
    input(
      name="email",
      type="email",
      placeholder="Email*",
      required,
      value=loggedInUser.email
    )
    input(
      name="username",
      type="text",
      placeholder="User Name*",
      required,
      value=loggedInUser.username
    )
    input(
      name="location",
      type="text",
      placeholder="Location",
      value=loggedInUser.location
    )
    input(type="submit", value="Update Profile")
    if !loggedInUser.socialOnly
      .edit-profile__password
        a(href="change-password") Change Password &rarr;

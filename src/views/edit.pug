extends base

block content
  h4 Update video
  form(method="POST")
    input(
      name="title",
      type="text",
      placeholder="Title",
      value=video.title,
      required,
      maxlength="80"
    )
    input(
      name="description",
      type="text",
      placeholder="Description",
      value=video.description,
      required,
      minlength="2"
    )
    input(
      name="hashtags",
      type="text",
      placeholder="Hashtags, separated by comma(,)",
      value=video.hashtags.join(),
      required
    )
    input(type="submit", value="Save")
